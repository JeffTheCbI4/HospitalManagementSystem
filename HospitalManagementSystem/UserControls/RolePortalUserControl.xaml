<UserControl x:Class="HospitalManagementSystem.UserControls.RolePortalUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HospitalManagementSystem.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="buttonLogOut" Width="auto" Content="Log out" HorizontalAlignment="Right" FontSize="20" Margin="0,20,20,0"/>
        <TabControl x:Name="RoleTabControl" Grid.Row="1">
            <TabItem x:Name="PatientTab" Header="Patient" FontSize="20" Visibility="Hidden">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="DoctorTab" Header="Doctor" FontSize="20" Visibility="Hidden">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="AdminTab" Header="Admin" FontSize="20" Visibility="Hidden">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
