<UserControl x:Class="HospitalManagementSystem.UserControls.RolePortalUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HospitalManagementSystem.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TabControl x:Name="RoleTabControl" Grid.Row="1">
            <TabItem Header="Patient" x:Name="PatientTab">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Doctor">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Admin">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <Border BorderBrush="Black" BorderThickness="1"/>
        </TabControl>
    </Grid>
</UserControl>
